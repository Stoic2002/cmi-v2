generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(uuid())
  email          String    @unique
  password       String
  name           String
  targetLanguage String    // en, ko, ja
  currentLevel   String    @default("beginner") // beginner, elementary, intermediate, advanced
  xp             Int       @default(0)
  streak         Int       @default(0)
  lastActiveDate DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  progress      UserProgress[]
  quizAttempts  QuizAttempt[]
  conversations AIConversation[]
  achievements  UserAchievement[]
}

model Course {
  id          String   @id @default(uuid())
  language    String   // en, ko, ja
  level       String   // beginner, elementary, intermediate, advanced
  title       String
  titleId     String   // Indonesian title
  description String
  descriptionId String // Indonesian description
  order       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  lessons Lesson[]

  @@unique([language, level, order])
}

model Lesson {
  id        String   @id @default(uuid())
  courseId  String
  title     String
  titleId   String   // Indonesian title
  content   Json     // Structured content (vocab, grammar, examples)
  order     Int
  xpReward  Int      @default(10)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  course   Course         @relation(fields: [courseId], references: [id], onDelete: Cascade)
  quizzes  Quiz[]
  progress UserProgress[]

  @@unique([courseId, order])
}

model Quiz {
  id       String   @id @default(uuid())
  lessonId String
  type     String   // multiple_choice, fill_blank, speaking, listening
  question String
  questionId String // Indonesian question
  options  Json?    // Array of options
  answer   String
  xpReward Int      @default(5)
  order    Int
  createdAt DateTime @default(now())

  lesson   Lesson        @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  attempts QuizAttempt[]

  @@unique([lessonId, order])
}

model UserProgress {
  id          String    @id @default(uuid())
  userId      String
  lessonId    String
  completed   Boolean   @default(false)
  score       Int       @default(0)
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  lesson Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@unique([userId, lessonId])
}

model QuizAttempt {
  id        String   @id @default(uuid())
  userId    String
  quizId    String
  answer    String
  isCorrect Boolean
  xpEarned  Int
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  quiz Quiz @relation(fields: [quizId], references: [id], onDelete: Cascade)
}

model AIConversation {
  id        String   @id @default(uuid())
  userId    String
  type      String   // free_chat, pronunciation, roleplay, grammar_drill, vocabulary
  topic     String?  // Optional topic/scenario
  messages  Json     // Array of messages [{role, content, timestamp}]
  feedback  Json?    // AI feedback summary
  xpEarned  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Achievement {
  id          String @id @default(uuid())
  name        String
  nameId      String // Indonesian name
  description String
  descriptionId String // Indonesian description
  icon        String
  condition   Json   // Condition to unlock {type, value}
  xpReward    Int
  createdAt   DateTime @default(now())

  users UserAchievement[]
}

model UserAchievement {
  id            String   @id @default(uuid())
  userId        String
  achievementId String
  unlockedAt    DateTime @default(now())

  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  achievement Achievement @relation(fields: [achievementId], references: [id], onDelete: Cascade)

  @@unique([userId, achievementId])
}
